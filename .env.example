# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=moni_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this_in_production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Gmail API Configuration (OAuth 2.0)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/gmail/admin/backend-callback

# Gmail Backend Account (Centralized Email Reading)
# This is the refresh token for the backend's Gmail account
# Obtain this by visiting /gmail/admin/backend-auth-url once
GMAIL_BACKEND_REFRESH_TOKEN=your_backend_refresh_token_here

# Email Forwarding Domain (for user forwarding addresses)
# Users will forward their bank emails to addresses like: user-xxxxx@this-domain
FORWARDING_EMAIL_DOMAIN=moni-emails.com

# App Configuration
PORT=3000
NODE_ENV=development

# Cron Configuration (Time to run daily email fetch, e.g., "0 0 * * *" for midnight)
EMAIL_FETCH_CRON=0 0 * * *
